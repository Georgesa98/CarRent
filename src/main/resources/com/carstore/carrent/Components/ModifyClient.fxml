<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="96.0" prefWidth="640.0" style="-fx-background-color: White; -fx-border-radius: 16px; -fx-background-radius: 16px;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.carstore.carrent.Components.ModifyClientController">
   <children>
      <VBox prefHeight="58.0" prefWidth="568.0">
         <children>
            <Label text="Fullname">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TextField fx:id="fullnameField" alignment="BOTTOM_LEFT">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </VBox>
      <VBox prefHeight="58.0" prefWidth="568.0">
         <children>
            <Label text="Car">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <ChoiceBox fx:id="availableCars" prefHeight="25.0" prefWidth="649.0" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </VBox>
      <VBox prefHeight="58.0" prefWidth="568.0">
         <children>
            <Label text="Payment">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TextField fx:id="paymentField" alignment="BOTTOM_LEFT">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </VBox>
      <VBox prefHeight="72.0" prefWidth="568.0">
         <children>
            <Label text="Rent End Date">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <DatePicker fx:id="rentEndDateField" prefHeight="33.0" prefWidth="568.0" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </VBox>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="8.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="24.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#updateClient" text="Edit Client">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#deleteClient" text="Delete Client">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#closeWindow" prefHeight="44.0" prefWidth="280.0" text="Close">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
